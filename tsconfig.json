{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@monitoring/sdk": ["packages/sdk/src"]
    },
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["apps", "packages"]
}
